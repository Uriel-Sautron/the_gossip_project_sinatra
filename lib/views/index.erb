<html>
  <head>
    <title>The Gossip Project</title>
  </head>
  <body>
    <h1>Mon super site de gossip, depuis le dossier views !</h1>
      <% gossips.each do |gossip| %>
      <p>
      <%= gossip.author %><br/>
      <%= gossip.content %>
      </p>
      <% end %>

      <%index = 0
      gossips.each_with_index do |gossip|%>
      <p>
       <a href="/gossips/<%= index += 1%>/">Liens pour le potin <%= index %></a>
      </p>
      <% end %>

  </body>
</html>